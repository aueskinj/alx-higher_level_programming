#!/bin/bash

Check if PYFILE is set and not empty
if [ -z "$PYFILE" ]; then
    echo "Error: PYFILE environment variable is not set."
    exit 1
fi

# Check if the file exists
if [ ! -f "$PYFILE" ]; then
    echo "Error: File '$PYFILE' not found."
    exit 1
fi

# Run the Python script
python "$PYFILE"
